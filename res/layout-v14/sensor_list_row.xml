<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
        
    <TextView
        android:id="@+id/text_sensor_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:text="@string/filler_sensor_type"
        android:textAppearance="@style/Text.Label" />
    
    <TextView
        android:id="@+id/text_sensor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_sensor_type"
        android:layout_below="@+id/text_sensor_type"
        android:layout_marginLeft="15dp"
        android:text="@string/filler_sensor_name"
        android:textAppearance="@style/Text.Default.Alt" />
    
    <Switch
        android:id="@+id/button_toggle_sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false" />
    
</RelativeLayout>