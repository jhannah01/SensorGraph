<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppBaseTheme" parent="@android:style/Theme"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="Text.Large" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/large</item>
    </style>

    <style name="Text.Large.Alt" parent="@style/Text.Large">
        <item name="android:textColor">@color/large_alt</item>
    </style>
    
    <style name="Text.Label" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/label</item>
    </style>

    <style name="Text.Label.Alt" parent="@style/Text.Label">
        <item name="android:textColor">@color/label_alt</item>
    </style>

    <style name="Text.Label.Red" parent="@style/Text.Label">
        <item name="android:textColor">@color/label_red</item>
    </style>

    <style name="Text.Default" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/default_text</item>
    </style>

    <style name="Text.Default.Alt" parent="@style/Text.Default">
        <item name="android:textColor">@color/default_alt</item>
    </style>

    <style name="Text.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Small.Alt" parent="@style/Text.Small">
        <item name="android:textColor">@color/small_alt</item>
    </style>
    
    <color name="default_text">#bfc6de</color>
    <color name="default_alt">#c0c0c0</color>
    <color name="small_alt">#61b4cf</color>
    <color name="large">#f0f0f0</color>
    <color name="large_alt">#37de6a</color>
    <color name="label">#4479d4</color>
    <color name="label_alt">#37de6a</color>
    <color name="label_red">#fe4900</color>
</resources>